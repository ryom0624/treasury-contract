{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "hardhat test",
      "skipFiles": ["<node_internals>/**"],
      "runtimeExecutable": "${workspaceFolder}/node_modules/.bin/hardhat",
      "args": ["test", "--network", "hardhat"],
      "cwd": "${workspaceFolder}"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "hardhat run script",
      "skipFiles": ["<node_internals>/**"],
      "runtimeExecutable": "${workspaceFolder}/node_modules/.bin/hardhat",
      "args": ["run", "./scripts/hoge.ts", "--network", "hardhat"],
      "cwd": "${workspaceFolder}"
    }
  ]
}
